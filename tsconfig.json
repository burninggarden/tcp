{
	"forceConsistentCasingInFileNames": true,
	"noImplicitReturns": true,
	"strict": true,
	"noUnusedLocals": true,
	"compilerOptions": {
		"baseUrl":         "./src",
		"target":          "es2017",
		"module":          "commonjs",
		"outDir":          "dist",
		"sourceMap":       true,
		"esModuleInterop": true
	},
	"typeRoots": [
		"node_modules/@types"
	],
	"include": [
		"src/**/*.ts",
		"test/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
